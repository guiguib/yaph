<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:p="urn:import:com.gbourquet.yaph.client.widget">
	<ui:style>
	.cadre {
		border-radius: 0.35em;
		border: 1px solid #ccc;
		margin-right: 10px;
		padding: 10px;
	}
	</ui:style>
	<g:HTMLPanel styleName="bloc">
		<h4>Passwords</h4>
		<g:DockLayoutPanel height="100%">
			<g:north size="0">
				<g:HTMLPanel></g:HTMLPanel>
			</g:north>
			<g:north size="50">
				<g:Button ui:field="newPasswordButton">Nouveau</g:Button>
			</g:north>
			<g:west size="300">
				<g:HTMLPanel styleName="{style.cadre}">
					<p:FolderTree ui:field="folders" />
				</g:HTMLPanel>
			</g:west>
			<g:center>
				<g:HTMLPanel>
					<g:HTMLPanel styleName="{style.cadre}">
						<c:DataGrid ui:field='dataGrid' height="185px" pageSize="5" />
					</g:HTMLPanel>
					<p:NormalPager ui:field='pager' pageSize="5" />
					<g:HTMLPanel styleName="{style.cadre}">
						<g:SimplePanel ui:field="detailPassword" />
						<g:HorizontalPanel>
							<g:Button ui:field="updatePasswordButton">Modifier</g:Button>
							<g:Button ui:field="deletePasswordButton">Supprimer</g:Button>
						</g:HorizontalPanel>
					</g:HTMLPanel>
				</g:HTMLPanel>
			</g:center>
		</g:DockLayoutPanel>
	</g:HTMLPanel>

</ui:UiBinder> 